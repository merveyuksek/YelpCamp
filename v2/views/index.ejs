<% include partials/header %>


<div class="container">
    <header class="jumbotron mt-4">
        <h1>Welcome To YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
    </header>

    <div class="row">
        <% campgrounds.forEach((campground) => { %>
        <div class="col-lg-3 col-md-6">
            <figure class="figure">
                <img class="figure-img img-fluid img-thumbnail" src="<%= campground.image %>"
                     alt="camping area's photo">
                <figcaption class="figure-caption text-left"><%= campground.name %></figcaption>
            </figure>
        </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>
